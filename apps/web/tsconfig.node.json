{
  "compilerOptions": {
    // Target modern Node.js
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    // Modern tooling
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "noEmit": true,

    // Strict type checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true

    // Optional: enable if part of build references
    // "composite": true
  },
  "include": ["vite.config.ts", "eslint.config.ts", "vitest.config.ts", "tailwind.config.ts"]
}
